{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/client-gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/client-gateway/tsconfig.app.json",
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": true,
          "skipAutoHttpCode": false
        }
      }
    ]
  },
  "monorepo": true,
  "root": "apps/client-gateway",
  "projects": {
    "auth-service": {
      "type": "application",
      "root": "apps/auth-service",
      "entryFile": "main",
      "sourceRoot": "apps/auth-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-service/tsconfig.app.json"
      }
    },
    "client-gateway": {
      "type": "application",
      "root": "apps/client-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/client-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/client-gateway/tsconfig.app.json"
      }
    },
    "nats": {
      "type": "library",
      "root": "libs/nats",
      "entryFile": "index",
      "sourceRoot": "libs/nats/src",
      "compilerOptions": {
        "tsConfigPath": "libs/nats/tsconfig.lib.json"
      }
    },
    "notification-service": {
      "type": "application",
      "root": "apps/notification-service",
      "entryFile": "main",
      "sourceRoot": "apps/notification-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notification-service/tsconfig.app.json"
      }
    },
    "order-service": {
      "type": "application",
      "root": "apps/order-service",
      "entryFile": "main",
      "sourceRoot": "apps/order-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/order-service/tsconfig.app.json"
      }
    },
    "payment-service": {
      "type": "application",
      "root": "apps/payment-service",
      "entryFile": "main",
      "sourceRoot": "apps/payment-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/payment-service/tsconfig.app.json"
      }
    },
    "product-service": {
      "type": "application",
      "root": "apps/product-service",
      "entryFile": "main",
      "sourceRoot": "apps/product-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/product-service/tsconfig.app.json"
      }
    },
    "review-service": {
      "type": "application",
      "root": "apps/review-service",
      "entryFile": "main",
      "sourceRoot": "apps/review-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/review-service/tsconfig.app.json"
      }
    }
  }
}