generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("AUTH_MS_DATABASE_URL")
}

enum ValidRoles {
  ADMIN
  PRODUCER
  CLIENT
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  fullName String
  email    String @unique
  password String
  role ValidRoles
}